<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- Main Theme -->

    <style name="Reegle" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReegleButton">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:focusable">false</item>
         <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="ImageButton">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>







    <style name="ReegleProgressWheel" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>



    <style name="GreyBreak">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/lightgrey2</item>
    </style>


    <style name="Reegle.header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/teal</item>

    </style>

    <style name="Reegle.fragment">
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">1</item>
    </style>



    <!-- Lists -->

    <style name="Reegle.list_wrapper">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Reegle.list">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="list_item_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
    </style>


    <style name="Reegle.list_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_search_item</item>
    </style>

    <style name="Reegle.list_item.search">
        <item name="android:background">@drawable/shape_search_item</item>
    </style>
    <style name="Reegle.list_item.doc">
        <item name="android:background">@drawable/shape_doc_item</item>
    </style>

    <style name="Reegle.list_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="Reegle.list_header.search">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Reegle.list_header.doc">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Reegle.list_header.read">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <!-- List Details -->

    <style name="Reegle.details">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
    </style>

        <!-- searches -->

    <style name="Reegle.detailBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/shape_search_details</item>
    </style>

    <style name="Reegle.search_details_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">.25</item>
    </style>

    <style name="Reegle.details.search">
        <item name="android:layout_weight">.75</item>
        <item name="android:textSize">14sp</item>
    </style>

         <!-- documents -->

    <style name="Reegle.details.document_preview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- User Messages -->

    <style name="Reegle.note">
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Reegle.note.dialog">
        <item name="android:textColor">@color/teal</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Reegle.reegle_stuff_info">
        <item name="android:background">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Toolbar -->

    <style name="Reegle.toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightgrey</item>

    </style>

    <style name="Reegle.actionGroup">
        <item name="android:padding">7dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Reegle.actionElem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Reegle.actionElem.icon">
        <item name="android:layout_height">25dp</item>
    </style>

    <!-- Form Views -->

    <style name="Reegle.form">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Reegle.form.label">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Reegle.form.input">
        <item name="android:maxWidth">200dp</item>
    </style>

    <!-- Custom Dialogue -->

    <style name="Reegle.dialogBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/transparent_grey</item>

    </style>

    <style name="Reegle.dialogBox">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">30px</item>
        <item name="android:layout_margin">30px</item>
        <item name="android:background">@drawable/shape_waiting_dialogue</item>
    </style>


</resources>